{
	"compilerOptions": {
		"outDir": "./dist/",
		"module": "es2022",
		"target": "es2022",
		"lib": ["es2022", "dom"],
		"allowJs": true,
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"allowSyntheticDefaultImports": true,
		"types": ["./svg.d.ts", "./css.d.ts"],
		"paths": {
			"@/*": ["./src/*"]
		}
	},
	"include": ["./src/**/*.ts"]
}
